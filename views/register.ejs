<div class="row mt-3">
    <div class="col">
        <div class="alert alert-warning" role="alert">
            <%= __('We don\'t spend more time on security, so do not use your Bank password') %>
            &#128540;
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="card">
            <div class="card-header">
                <span class="fas fa-sign-in-alt"></span>
                <span class="fa fa-lock"></span>
                <%= __('Authentication') %>
            </div>
            <div class="card-body">
                <form action="/register" method="POST" class="was-validate pt-3">
                    <div class="form-row">
                        <div class="form-group col"></div>
                        <div class="form-group col">
                            <label for="email" class="col-form-label"><%= __('Email') %></label>
                            <input type="email" placeholder="mario_rossi@email.com" name="email" class="form-control" required/>
                        </div>
                        <div class="form-group col"></div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col"></div>
                        <div class="form-group col">
                            <label for="password" class="col-form-label"><%= __('Password') %></label>
                            <input type="password" min="4" name="password" class="form-control" required/>
                        </div>
                        <div class="form-group col"></div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <button type="submit" class="btn btn-primary" id="register" >
                                <span class="fas fa-sign-in-alt"></span>
                                Register
                            </button> 
                        </div>
                    </div>
                </form>
                <div class="form-row"></div>
                <div class="form-row"></div>
                <div class="form-row">
                    <div class="form-group col"></div>
                    <div class="form-group col-10 mt-3">
                        <a href="/login/google" class="btn btn-danger"><span class="fab fa-google"></span> <%= __('SignIn with Google') %></a>
                    </div>
                    <div class="form-group col"></div>
                </div>
                <div class="form-row">
                    <div class="form-group col"></div>
                    <div class="form-group col-10">
                        <a href="/login/github" class="btn btn-dark"><span class="fab fa-github"></span> <%= __('SignIn with GitHub') %> </a>
                    </div>
                    <div class="form-group col"></div>
                </div>
                <div class="form-row">
                    <div class="form-group col"></div>
                    <div class="form-group col-10">
                        <a href="/login/facebook" class="btn btn-primary"><span class="fab fa-facebook"></span> <%= __('SignIn with Facebook') %></a>
                    </div>
                    <div class="form-group col"></div>
                </div>
            </div>
            <div class="card-footer text-muted"></div>
        </div>

    </div>
</div>