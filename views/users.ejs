<div class="container mb-2">
    <div class="card">
        <div class="card-header">
            <%= __('Add new User') %>
        </div>
        <div class="card-body">
            <form action="/types" method="POST" class="was-validate pt-3">
                <div class="form-row">
                    <div class="form-group col">
                        <label for="name" class="col-form-label"><%= __('Name') %></label>
                        <input type="text" placeholder="Mario" name="name" class="form-control" value="" required/>
                    </div>
                    <div class="form-group col">
                        <label for="surname" class="col-form-label"><%= __('Surname') %></label>
                        <input type="text" placeholder="Rossi" name="surname" class="form-control" value="" required/>
                    </div>
                    <div class="form-group col">
                        <label for="email" class="col-form-label"><%= __('Email') %></label>
                        <input type="email" placeholder="myEmail@something.com" name="email" class="form-control" value="" required/>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="phone" class="col-form-label"><%= __('Phone nÂ°') %></label>
                        <input type="text" placeholder="333 333 3333" name="phone" class="form-control" value="" required/>
                    </div>
                    <div class="form-group col">
                        <label for="address" class="col-form-label"><%= __('Address') %></label>
                        <input type="text" placeholder="Str Home sweet Home" name="address" class="form-control" value="" required/>
                    </div>
                    <div class="form-group col">
                        <label for="yearOfBirth" class="col-form-label"><%= __('Born Date') %></label>
                        <input type="date" name="yearOfBirth" class="form-control" value="" required/>
                    </div>
                </div>
                <button class="btn btn-primary mb-2" type="submit"><%= __('Submit') %></button>
            </form>
        </div>
    </div>
</div></br>

<div class="container mb-5">
    <div class="card">
        <div class="card-header">
            <%= links %>
        </div>
        <div class="card-body">
            <% if(user && user.length>0) { %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col"><%= __('Name') %></th>
                        <th scope="col"><%= __('Surname') %></th>
                        <th scope="col"><%= __('Email') %></th>
                        <th scope="col"><%= __('Phone') %></th>
                        <th scope="col"><%= __('Address') %></th>
                        <th scope="col"><%= __('Born Date') %></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% user.forEach(function(u) { %> 
                        <tr>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.name %></a></td>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.surname %></a></td>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.email %></a></td>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.phone %></a></td>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.address %></a></td>
                            <td><a class="primary font-weight-bold" href="/users/<%= u.id %>"><%= u.yearOfBirth %></a></td>
                            <td>
                                <button class="btn btn-sm btn-warning" type="button" onclick="">
                                    <span class="fa fa-edit"></span>
                                </button>
                                <% user.action='/users'; %>
                                <button class="btn btn-sm btn-danger" type="button" onclick="pushInfoElement(<%= JSON.stringify(u)%>);" data-toggle="modal" data-target="#exampleModalCenter">
                                    <span class="fas fa-trash-alt"></span>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <% }else{ %>
                <%- include('nodata') %> 
            <% } %>
        </div>
    </div>
</div>