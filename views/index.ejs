  <div class="container quotes">

<div class="card">
  <div class="card-header">Header</div>
  <div class="card-body">
  
<div class="table-responsive">
  <table class="table table-bordered table-hover">
          <thead>
                  <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Quote</th>
                  <tr>
          </thead>
          <tbody>
<% for(var i=0; i<quotes.length; i++) {%>
<tr>
        <td><%= quotes[i].name %></td>
        <td><%= quotes[i].quote %></td>
</tr><% } %>
          </tbody>

  </table>
 
  </div>
  <div class="card-footer">
  
	  <ul class="pagination">
  <li class="page-item"><a class="page-link" href="#">Previous</a></li>
  <% for(var i=0;i<(quotes.length%10);i++) {%>
  <li class="page-item"><a class="page-link" href="#"><%=i+1%></a></li>
  <% } %>
  <li class="page-item"><a class="page-link" href="#">Next</a></li>
</ul>

  </div>
</div>

	</div> 
  <form action="/quotes" method="POST" class="was-validate">
	  <div class="form-group">
		<label for="name">Name:</label>
	  	<input type="text" placeholder="name" name="name"></br>
	  	<label for="quote">Quote:</label>
		<input type="text" placeholder="quote" name="quote"></br>
          	<button class="btn btn-primary" type="submit">Submit</button>
	</div>
  </form>
  
  <div>
	  <h3>Replace last quote </h3>
	  <button class="btn btn-warning" id="update"> Replace </button>
  </div>
  <div>
  	<h3>Delete first quote</h3>
  	<button class="btn btn-danger" id="delete"disabled> Delete first quote </button>
  </div>
  </div>
