<!-- Modal -->
<div class="modal fade" id="exampleModalCenterType" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTypeTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTypeTitle"><%= __('Delete') %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            <p id="textModalType"><%= __('Are you sure to delete') %></p>
            </div>
            <div class="modal-footer">
                <form method="POST" action="/types">
                    <input id="id_type" type="hidden" name="id" value="">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= __('Close') %></button>
                    <button id="delete_type" type="submit" value="delete" class="btn btn-danger" data-dismiss="modal"><%= __('Delete element') %></button>
                </form>
            </div>
        </div>
    </div>
</div>