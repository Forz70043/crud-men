<div class="container mb-2">
    <div class="card">
        <div class="card-header">
            <%= __('Add new Type') %>
        </div>
        <div class="card-body">
            <form action="/types" method="POST" class="was-validate pt-3">
                <div class="form-row">
                    <div class="form-group col">
                        <input type="hidden" name="id" class="form-control" value="<%= rows.types[0].id %>"/>
                    </div>
                    <div class="form-group col-10">
                        <label for="name" class="col-form-label"><%= __('Name') %></label>
                        <input type="text" placeholder="Food" name="name" class="form-control" value="<%= rows.types[0].name %>" required/>
                    </div>
                    <div class="form-group col"></div>
                </div>
                <button class="btn btn-danger mb-2" id="delete" name="send" type="submit" value="delete"><%= __('Delete') %></button>
                <button class="btn btn-primary mb-2" id="update" name="send" value="update" type="submit"><%= __('Save') %></button>
            </form>
        </div>
    </div>
</div></br>